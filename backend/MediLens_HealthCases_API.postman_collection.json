{
  "info": {
    "name": "MediLens Health Cases API",
    "description": "Collection for testing Health Cases endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health Cases",
      "item": [
        {
          "name": "1. Create Health Case",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"symptoms\": \"severe headache and dizziness\",\n  \"severity\": \"high\",\n  \"category\": \"neurological\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cases",
              "host": ["{{base_url}}"],
              "path": ["api", "cases"]
            },
            "description": "Create a new health case for the authenticated user"
          },
          "response": []
        },
        {
          "name": "2. List All Cases",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/cases",
              "host": ["{{base_url}}"],
              "path": ["api", "cases"]
            },
            "description": "Retrieve all health cases for the authenticated user"
          },
          "response": []
        },
        {
          "name": "3. Get Single Case",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/cases/{{case_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "cases", "{{case_id}}"]
            },
            "description": "Retrieve a specific health case by ID"
          },
          "response": []
        },
        {
          "name": "4. Update Case Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"in_progress\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cases/{{case_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "cases", "{{case_id}}"]
            },
            "description": "Update case status (open, in_progress, resolved, closed)"
          },
          "response": []
        },
        {
          "name": "5. Update Case Details",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"symptoms\": \"updated symptoms description\",\n  \"severity\": \"medium\",\n  \"category\": \"neurological\",\n  \"status\": \"in_progress\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cases/{{case_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "cases", "{{case_id}}"]
            },
            "description": "Update multiple case fields"
          },
          "response": []
        },
        {
          "name": "6. Close Case",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"resolved\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/cases/{{case_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "cases", "{{case_id}}"]
            },
            "description": "Mark a case as resolved"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('auth_token', jsonData.access_token);",
                  "    console.log('Token saved to environment');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Authenticate and get JWT token"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "case_id",
      "value": "",
      "type": "string"
    }
  ]
}
